<div class="card border-light mb-3">
    <div class="card-title">  
        <div class="container">
            <div class="row">            
                <div class="col-sm-10">                
                    <h3>Categorias</h3>               
                </div>
                <div class="col-sm-2" style="text-align: end;">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#formCategory">
                        Nuevo
                    </button>  
                    {{> categories/categoryForm }}           
                </div>                        
            </div>
        </div>                      
    </div>
    <div class="card-body">                   
        <div class="row">
            <div class="col-sm-12">
                <table id="example2" class="table table-bordered table-striped dataTable dtr-inline collapsed" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>                            
                            <th>Categoria</th>
                            <th>Descripcion</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categories}}
                            <tr>
                                <td>
                                    <div class="container">
                                        <div class="row">
                                            <a href="/categories/{{_id}}/edit" class="btn btn-primary btn-sm active" role="button" aria-disabled="true">
                                                <i class="fa-regular fa-pen-to-square"></i> </a>
                                            <a class="btn btn-danger btn-sm active" onclick="delCategory('{{_id}}');" role="button" aria-disabled="true">
                                                <i class="fa-regular fa-trash-can"></i></a>
                                        </div> 
                                    </div>                               
                                </td>
                                <td>{{category}}</td>
                                <td>{{description}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>            
    </div>
</div>